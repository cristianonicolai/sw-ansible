{
  "id": "ansible",
  "version": "1.0",
  "expressionLang": "jsonpath",
  "name": "Workflow Ansible example",
  "description": "An example of how to integrate with Ansible",
  "start": "Trigger",
  "functions": [
    {
      "name": "triggerAnsible",
      "operation": "specs/RedHatRegistry__tower__latest.yaml#Job Templates_job_templates_launch_create",
      "type": "rest"
    },
    {
      "name": "printMessage",
      "type": "custom",
      "operation": "sysout"
    }
  ],
  "events": [
    {
      "name": "AnsibleTowerEvent",
      "source": "",
      "type": "ansible-tower-job-completed"
    }
  ],
  "states": [
    {
      "name": "Trigger",
      "type": "callback",
      "action": {
        "name": "ansibleAction",
        "functionRef": {
          "refName": "triggerAnsible",
          "arguments": {
            "id": "7",
            "extra_vars": {
              "kogito_id": "$WORKFLOW.instanceId"
            }
          }
        }
      },
      "eventRef": "AnsibleTowerEvent",
      "transition": "VerifyPlaybookRun"
    },
    {
      "name": "VerifyPlaybookRun",
      "type": "operation",
      "actions": [
        {
          "name": "printAction",
          "functionRef": {
            "refName": "printMessage",
            "arguments": {
              "message": "$[*]"
            }
          }
        }
      ],
      "end": {
        "terminate": "true"
      }
    }
  ]
}